<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.wiyonoaten.simplelayerquickstartandroid" android:versionCode="1" android:versionName="1.0" android:installLocation="auto">
	<uses-sdk android:minSdkVersion="14" android:targetSdkVersion="22" />
	<!-- Standard permissions -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<!-- Signature-only permissions -->
	<permission android:name="com.wiyonoaten.layerquickstartandroid.permission.LAYER_PUSH" android:protectionLevel="signature" />
	<uses-permission android:name="com.wiyonoaten.layerquickstartandroid.permission.LAYER_PUSH" />
	<permission android:name="com.wiyonoaten.layerquickstartandroid.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="com.wiyonoaten.layerquickstartandroid.permission.C2D_MESSAGE" />
	<!-- LayerClient.sendLogs() permissions -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_LOGS" />
	<application android:label="SimpleLayerQuickStartAndroid" android:icon="@drawable/Icon">
		<!-- Your custom "com.layer.sdk.PUSH" notification Receiver -->
		<receiver android:name=".LayerPushReceiver">
			<intent-filter>
				<action android:name="com.layer.sdk.PUSH" />
				<category android:name="com.wiyonoaten.layerquickstartandroid" />
			</intent-filter>
		</receiver>
		<!-- Layer's GCM Receiver and Service -->
		<receiver android:name="com.layer.sdk.services.GcmBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
			<intent-filter android:priority="950">
				<action android:name="com.google.android.c2dm.intent.REGISTRATION" />
				<action android:name="com.google.android.c2dm.intent.RECEIVE" />
				<category android:name="com.wiyonoaten.layerquickstartandroid" />
			</intent-filter>
		</receiver>
		<service android:name="com.layer.sdk.services.GcmIntentService" />
	</application>
</manifest>